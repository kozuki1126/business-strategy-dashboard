{
  "name": "business-strategy-dashboard",
  "version": "0.1.0",
  "private": true,
  "description": "経営戦略ダッシュボード & 売上集計システム（社内向け）",
  "keywords": ["dashboard", "analytics", "sales", "internal", "nextjs", "supabase"],
  "author": "TBD",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "build:analyze": "ANALYZE=true npm run build",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:types": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "playwright test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:check": "jest --coverage --coverageThreshold='{\"global\":{\"lines\":80,\"functions\":80,\"branches\":75,\"statements\":80}}'",
    "perf:test": "node scripts/performance-test.js",
    "perf:smoke": "node scripts/performance-test.js smoke",
    "perf:slo": "node scripts/performance-test.js slo",
    "perf:full": "node scripts/performance-test.js full",
    "perf:report": "node scripts/performance-test.js slo 2>&1 | tee performance-report-$(date +%Y%m%d-%H%M%S).log",
    "perf:comprehensive": "tsx src/lib/performance/comprehensive-test.ts",
    "perf:optimize": "tsx scripts/performance-optimization-014.ts",
    "perf:db-optimize": "tsx src/lib/database/performance-optimizer.ts",
    "test:load": "tsx scripts/load-test.ts",
    "test:load:quick": "tsx scripts/load-test.ts --concurrent=10 --duration=60",
    "test:load:production": "tsx scripts/load-test.ts --concurrent=100 --duration=1800 --baseUrl=https://business-strategy-dashboard.vercel.app",
    "test:slo:verify": "tsx -e \"import { runComprehensivePerformanceTest } from './src/lib/performance/comprehensive-test'; runComprehensivePerformanceTest()\"",
    "optimize:bundle": "tsx scripts/bundle-optimizer.ts",
    "analyze:bundle": "tsx scripts/bundle-optimizer.ts --optimize",
    "monitor:slo": "tsx -e \"import { sloMonitor } from './src/lib/monitoring/slo-monitor'; sloMonitor.startMonitoring(5)\"",
    "cache:warm": "tsx -e \"import { warmCache } from './src/lib/cache/performance-cache'; warmCache()\"",
    "cache:clear": "tsx -e \"import { cacheUtils } from './src/lib/cache/performance-cache'; cacheUtils.clearAll()\"",
    "security:check": "npm audit --audit-level high && npx tsx scripts/security-check.ts",
    "performance:check": "npm run perf:smoke && npm run optimize:bundle",
    "performance:verify": "npm run build && npm run perf:slo",
    "performance:full-test": "npm run perf:optimize && npm run perf:db-optimize && npm run test:slo:verify",
    "ci:quality": "npm run lint && npm run test:coverage:check && npm run build",
    "ci:performance": "npm run performance:check",
    "ci:all": "npm run ci:quality && npm run ci:performance",
    "prepare": "husky",
    "db:generate": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID --schema public > src/types/database.types.ts",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase migration up",
    "db:seed": "supabase seed",
    "db:optimize": "tsx src/lib/database/performance-optimizer.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "@supabase/ssr": "^0.5.1",
    "next": "^15.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7",
    "echarts": "^5.5.1",
    "echarts-for-react": "^3.0.2",
    "date-fns": "^3.6.0",
    "zod": "^3.23.8",
    "@hookform/resolvers": "^3.9.0",
    "react-hook-form": "^7.53.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2",
    "lucide-react": "^0.446.0",
    "resend": "^4.0.0",
    "papaparse": "^5.4.1",
    "exceljs": "^4.4.0",
    "lru-cache": "^11.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.16.10",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@types/papaparse": "^5.3.14",
    "@types/node-fetch": "^2.6.11",
    "eslint-config-next": "^15.5.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2",
    "tailwindcss": "^3.4.13",
    "postcss": "^8.4.47",
    "autoprefixer": "^10.4.20",
    "@playwright/test": "^1.47.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/user-event": "^14.5.2",
    "msw": "^2.4.9",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "@next/bundle-analyzer": "^15.0.0",
    "tsx": "^4.19.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testPathIgnorePatterns": ["<rootDir>/.next/", "<rootDir>/node_modules/"],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{js,jsx,ts,tsx}",
      "!src/**/index.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 80,
        "functions": 80,
        "branches": 75,
        "statements": 80
      }
    },
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
